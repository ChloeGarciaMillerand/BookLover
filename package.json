{
  "name": "booklover",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "PORT=4173 react-router-serve ./build/server/index.js",
    "db:reset": "pnpx supabase db reset",
    "typecheck": "react-router typegen && tsc",
    "format": "oxfmt .",
    "lint": "oxlint .",
    "prepare": "husky || true",
    "test:supabase": "supabase start",
    "test:run": "pnpm exec playwright test --reporter=list",
    "test:dev": "pnpm exec playwright test --ui",
    "test": "pnpm run test:supabase && pnpm run test:run"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": [
      "oxfmt --no-error-on-unmatched-pattern",
      "oxlint"
    ]
  },
  "dependencies": {
