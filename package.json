    "oxfmt": "^0.17.0",
    "oxlint": "^1.48.0",
    "supabase": "^2.76.10",
    "tailwindcss": "^4.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
