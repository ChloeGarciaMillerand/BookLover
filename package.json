    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.97.0",
    "dotenv": "^17.3.1",
    "isbot": "^5.1.35",
    "lucide-react": "^0.562.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "7.10.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@react-router/dev": "7.10.1",
